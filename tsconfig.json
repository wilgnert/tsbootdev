{
  "compilerOptions": {
    "lib": ["esnext", "dom", "dom.iterable"],
    "target": "esnext",
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "module": "ESNext",
    "outDir": "public"
  },
}